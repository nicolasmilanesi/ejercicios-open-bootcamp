public class Main {
    public static void main(String[] args) {

        int numeroIf;
        numeroIf=4;

        if (numeroIf>0){
            System.out.println("el numero es positivo");
        } else if (numeroIf<0) {
            System.out.println("el numero es negativo");
        } else {
            System.out.println("el numero es cero");
        }

        int numeroWhile=0;

        while (numeroWhile<3){
            System.out.println(numeroWhile);
            numeroWhile++;
        }

        do {
            System.out.println(numeroWhile);
            numeroWhile++;
        } while (numeroWhile<3);


        for (int numeroFor=0;numeroFor<=3;numeroFor++){
            System.out.println(numeroFor);
        }


        String estacion="primavera";

        switch (estacion){
            case "verano":
                System.out.println("Ud. esta en Verano");
                break;
            case "otoño":
                System.out.println("Ud. esta en Otoño");
                break;
            case "invierno":
                System.out.println("Ud. esta en Invierno");
                break;
            case "primavera":
                System.out.println("Ud. esta en Primavera");
                break;
            default:
                System.out.println("No corresponde a una estacion");
                break;
        }
    }
}
